<Window x:Class="imobiliaria.Telas.Teste"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:imobiliaria.Telas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Teste">

    <Grid>
        <Grid Height="100" Width="100">
            <StackPanel>
                <StackPanel x:Name="sp1" Orientation="Horizontal">
                    <RadioButton x:Name="Teste1" Content="Teste1" ></RadioButton>
                    <RadioButton Content="Teste2"></RadioButton>
                </StackPanel>

                <StackPanel x:Name="sp2" Orientation="Vertical" IsEnabled="{Binding IsChecked, ElementName=Teste1}">
                    <RadioButton Content="Teste3"></RadioButton>
                    <RadioButton Content="Teste4"></RadioButton>
                </StackPanel>
            </StackPanel>
        </Grid>   
    </Grid>
</Window>
